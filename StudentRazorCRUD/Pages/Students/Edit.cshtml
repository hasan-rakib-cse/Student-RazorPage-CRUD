@page
@model StudentRazorCRUD.Pages.Students.EditModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <form method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Std.Id" />
                    <div class="form-group mb-3">
                        <label asp-for="Std.Name" class="form-label">Name</label>
                        <input asp-for="Std.Name" type="text" class="form-control" required />
                        <span asp-validation-for="Std.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Std.Email" class="form-label">Email</label>
                        <input asp-for="Std.Email" type="email" class="form-control" required />
                        <span asp-validation-for="Std.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Std.Phone" class="form-label">Phone</label>
                        <input asp-for="Std.Phone" class="form-control" required />
                        <span asp-validation-for="Std.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check mb-3">
                        <input asp-for="Std.Subscribed" class="form-check-input" type="checkbox" />
                        <label asp-for="Std.Subscribed" class="form-check-label">Subscribed</label>
                    </div>
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-success btn-sm">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-12">
        <a class="btn btn-sm btn-primary" asp-page="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}